<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:text="Add New Task"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Plan Vacation"
        android:inputType="textPersonName" />
    <TextView
        android:id="@+id/date"
        android:layout_below="@+id/task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="Due Date"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/date_holder"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/date"
        android:layout_alignBottom="@+id/date"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        android:layout_toLeftOf="@+id/calButton"
        android:text=""
        android:textSize="15dp" />

    <ImageButton
        android:id="@+id/calButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/task"
        app:srcCompat="@android:drawable/ic_menu_my_calendar"
        android:layout_alignRight="@+id/save"
        android:layout_alignEnd="@+id/save" />

    <Button
        android:id="@+id/dismiss"
        android:layout_below="@+id/calButton"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="Dismiss" />

    <Button
        android:id="@+id/save"
        android:layout_below="@+id/calButton"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/dismiss"
        android:layout_alignBottom="@+id/dismiss"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="50dp"
        android:text="Save" />
</RelativeLayout>